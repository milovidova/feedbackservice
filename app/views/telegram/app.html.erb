    <!-- Notification -->
    <div id="notification" class="notification"></div>

    <script>
   
        const API_BASE = '/telegram';
        
        
        let currentUser = null;
        let projects = [];
        let selectedImage = null;
        let currentFeedbackProjectId = null;
        
      
        function showNotification(message, type = 'info') {
            console.log('üì¢', message);
            const el = document.getElementById('notification');
            el.textContent = message;
            el.className = `notification ${type}`;
            el.classList.add('show');
            
            setTimeout(() => el.classList.remove('show'), 3000);
        }
        
      
        function showTab(tabName) {
            // –¢–∞–±—ã
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            
            document.querySelector(`[onclick="showTab('${tabName}')"]`).classList.add('active');
            document.getElementById(tabName).classList.add('active');
            
            // –ó–∞–≥—Ä—É–∑–∫–∞ –¥–∞–Ω–Ω—ã—Ö
            if (tabName === 'view') {
                loadMyProjects();
            } else if (tabName === 'community') {
                loadCommunityProjects();
            }
        }
        
      
        function initTelegram() {
            const tg = window.Telegram?.WebApp;
            
            if (tg) {
                tg.expand();
                tg.enableClosingConfirmation();
                
                currentUser = tg.initDataUnsafe?.user || {
                    id: 1,
                    username: 'telegram_user',
                    first_name: '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å'
                };
                
                document.getElementById('userInfo').textContent = `üë§ @${currentUser.username || currentUser.first_name}`;
            } else {
                currentUser = { id: 1, username: 'browser_user', first_name: '–ë—Ä–∞—É–∑–µ—Ä' };
                document.getElementById('userInfo').textContent = 'üë§ –¢–µ—Å—Ç–æ–≤—ã–π —Ä–µ–∂–∏–º';
            }
            
            console.log('–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å:', currentUser);
        }
        
       
        function previewImage(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            if (!file.type.match('image.*')) {
                showNotification('‚ùå –í—ã–±–µ—Ä–∏—Ç–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ', 'error');
                return;
            }
            
            if (file.size > 5 * 1024 * 1024) {
                showNotification('‚ùå –§–∞–π–ª —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–π (–º–∞–∫—Å. 5MB)', 'error');
                return;
            }
            
            selectedImage = file;
            
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('imagePreview');
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(file);
            
            showNotification('‚úÖ –ò–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –∑–∞–≥—Ä—É–∂–µ–Ω–æ');
        }
        
        
        async function createProject() {
            const title = document.getElementById('projectTitle').value.trim();
            const description = document.getElementById('projectDescription').value.trim();
            const category = document.getElementById('projectCategory').value;
            const feedbackRequest = document.getElementById('feedbackRequest').value.trim();
            
           
            if (!title) return showNotification('‚ùå –í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ', 'error');
            if (!category) return showNotification('‚ùå –í—ã–±–µ—Ä–∏—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é', 'error');
            
            showNotification('‚è≥ –ü—É–±–ª–∏–∫—É—é...');
            
            try {
                const formData = new FormData();
                formData.append('project[title]', title);
                formData.append('project[description]', description);
                formData.append('project[category]', category);
                formData.append('project[feedback_request]', feedbackRequest);
                
                if (selectedImage) {
                    formData.append('project[image]', selectedImage);
                }
                
                const response = await fetch(`${API_BASE}/create_project`, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-CSRF-Token': '<%= form_authenticity_token %>'
                    }
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('‚úÖ –ü—Ä–æ–µ–∫—Ç —Å–æ–∑–¥–∞–Ω!');
                    
                    // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
                    ['projectTitle', 'projectDescription', 'projectCategory', 'feedbackRequest'].forEach(id => {
                        document.getElementById(id).value = '';
                    });
                    
                    document.getElementById('projectImage').value = '';
                    document.getElementById('imagePreview').style.display = 'none';
                    selectedImage = null;
                    
                    // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å–ø–∏—Å–∫–∞
                    setTimeout(() => {
                        showTab('view');
                        loadMyProjects();
                    }, 500);
                } else {
                    showNotification(`‚ùå ${result.errors?.join(', ') || '–û—à–∏–±–∫–∞'}`, 'error');
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è:', error);
                showNotification('‚ùå –û—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }
        
    
        async function loadMyProjects() {
            const container = document.getElementById('myProjectsList');
            container.innerHTML = '<div class="loading">üîÑ –ó–∞–≥—Ä—É–∑–∫–∞ –≤–∞—à–∏—Ö –ø—Ä–æ–µ–∫—Ç–æ–≤...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/my_projects`);
                if (!response.ok) throw new Error('HTTP ' + response.status);
                
                const myProjects = await response.json();
                console.log('–ú–æ–∏ –ø—Ä–æ–µ–∫—Ç—ã:', myProjects.length);
                renderProjects(container, myProjects, false); // false = –º–æ–∏ –ø—Ä–æ–µ–∫—Ç—ã
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏:', error);
                container.innerHTML = '<div class="empty-state">‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø—Ä–æ–µ–∫—Ç–æ–≤</div>';
                showNotification('‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –≤–∞—à–∏ –ø—Ä–æ–µ–∫—Ç—ã', 'error');
            }
        }
        
        
        async function loadCommunityProjects() {
            const container = document.getElementById('communityProjectsList');
            container.innerHTML = '<div class="loading">üîÑ –ó–∞–≥—Ä—É–∑–∫–∞ –ø—Ä–æ–µ–∫—Ç–æ–≤ —Å–æ–æ–±—â–µ—Å—Ç–≤–∞...</div>';
            
            try {
                const response = await fetch(`${API_BASE}/projects`);
                if (!response.ok) throw new Error('HTTP ' + response.status);
                
                const communityProjects = await response.json();
                console.log('–ü—Ä–æ–µ–∫—Ç—ã —Å–æ–æ–±—â–µ—Å—Ç–≤–∞:', communityProjects.length);
                renderProjects(container, communityProjects, true); // true = –ø—Ä–æ–µ–∫—Ç—ã —Å–æ–æ–±—â–µ—Å—Ç–≤–∞
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏:', error);
                container.innerHTML = '<div class="empty-state">‚ùå –û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø—Ä–æ–µ–∫—Ç–æ–≤</div>';
                showNotification('‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å –ø—Ä–æ–µ–∫—Ç—ã —Å–æ–æ–±—â–µ—Å—Ç–≤–∞', 'error');
            }
        }
        
   
        async function createFeedback(projectId) {
            const content = prompt('üí¨ –í–≤–µ–¥–∏—Ç–µ –≤–∞—à —Ñ–∏–¥–±–µ–∫:');
            if (!content || !content.trim()) return;
            
            showNotification('‚è≥ –û—Ç–ø—Ä–∞–≤–ª—è—é —Ñ–∏–¥–±–µ–∫...');
            
            try {
                const response = await fetch(`${API_BASE}/projects/${projectId}/feedbacks`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': '<%= form_authenticity_token %>'
                    },
                    body: JSON.stringify({
                        feedback: {
                            content: content
                        }
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showNotification('‚úÖ –§–∏–¥–±–µ–∫ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω!');
                    // –û–±–Ω–æ–≤–ª—è–µ–º —Å–ø–∏—Å–æ–∫ –ø—Ä–æ–µ–∫—Ç–æ–≤
                    if (document.getElementById('community').classList.contains('active')) {
                        loadCommunityProjects();
                    } else {
                        loadMyProjects();
                    }
                } else {
                    showNotification(`‚ùå ${result.errors?.join(', ') || '–û—à–∏–±–∫–∞'}`, 'error');
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Ñ–∏–¥–±–µ–∫–∞:', error);
                showNotification('‚ùå –û—à–∏–±–∫–∞ —Å–µ—Ç–∏', 'error');
            }
        }
        
       
        function renderProjects(container, projectsList, isCommunity = false) {
            if (!projectsList || !projectsList.length) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div style="font-size: 48px; margin-bottom: 16px;">üìÅ</div>
                        <p>${isCommunity ? '–í —Å–æ–æ–±—â–µ—Å—Ç–≤–µ –ø–æ–∫–∞ –Ω–µ—Ç –ø—Ä–æ–µ–∫—Ç–æ–≤' : '–£ –≤–∞—Å –ø–æ–∫–∞ –Ω–µ—Ç –ø—Ä–æ–µ–∫—Ç–æ–≤'}</p>
                        <small>${isCommunity ? '–ë—É–¥—å—Ç–µ –ø–µ—Ä–≤—ã–º!' : '–°–æ–∑–¥–∞–π—Ç–µ –ø–µ—Ä–≤—ã–π –ø—Ä–æ–µ–∫—Ç!'}</small>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = projectsList.map(project => `
                <div class="project-card">
                    ${project.image_url ? `<img src="${project.image_url}" class="project-image" alt="${project.title}">` : ''}
                    <div class="project-title">${project.title}</div>
                    <div class="project-author">üë§ @${project.user?.username || 'user'}</div>
                    <div class="project-description">${project.description || '–ë–µ–∑ –æ–ø–∏—Å–∞–Ω–∏—è'}</div>
                    ${project.feedback_request ? `<div style="font-size: 14px; color: #666; margin-bottom: 8px;"><strong>üí° –ó–∞–ø—Ä–æ—Å —Ñ–∏–¥–±–µ–∫–∞:</strong> ${project.feedback_request}</div>` : ''}
                    <div class="project-meta">
                        <span>üè∑Ô∏è ${project.category}</span>
                        <span class="feedback-count">üí¨ ${project.feedbacks?.length || 0}</span>
                    </div>
                    
                    ${isCommunity ? `
                        <button class="btn btn-feedback" onclick="createFeedback(${project.id})">
                            üí¨ –û—Å—Ç–∞–≤–∏—Ç—å —Ñ–∏–¥–±–µ–∫
                        </button>
                    ` : ''}
                    
                    ${renderFeedbacks(project.feedbacks)}
                </div>
            `).join('');
        }
        
    
        function renderFeedbacks(feedbacks) {
            if (!feedbacks || !feedbacks.length) return '';
            
            return `
                <div class="feedbacks-section">
                    <div style="font-size: 14px; font-weight: 600; margin-bottom: 12px; color: #101010;">–§–∏–¥–±–µ–∫–∏ (${feedbacks.length}):</div>
                    ${feedbacks.map(fb => `
                        <div class="feedback-item">
                            <div class="feedback-author">üë§ @${fb.user?.username || 'user'}</div>
                            <div class="feedback-content">${fb.content}</div>
